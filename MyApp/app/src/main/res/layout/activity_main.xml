<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="7"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/secondaryTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/teal_700"
        android:gravity="right"
        android:text=""
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/primaryTextViewID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/teal_700"
        android:gravity="right"
        android:text="0"
        android:textSize="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/ceBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:text="CE"
            android:textSize="40dp" />

        <Button
            android:id="@+id/cBtnID"
            android:layout_width="wrap_content"
            android:onClick="clickMeNow"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="C"
            android:textSize="40dp" />

        <Button
            android:onClick="clickMeNow"
            android:id="@+id/backBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="←"
            android:textSize="40dp" />

        <Button
            android:id="@+id/divBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:text="/"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:id="@+id/sevenBtnID"
            android:text="7"
            android:textSize="40dp" />

        <Button
            android:id="@+id/eightBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:text="8"
            android:textSize="40dp" />

        <Button
            android:id="@+id/nineBtnID"
            android:layout_width="wrap_content"
            android:onClick="clickMeNow"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="9"
            android:textSize="40dp" />

        <Button
            android:id="@+id/prodBtnID"
            android:onClick="clickMeNow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="X"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:id="@+id/fourBtnID"
            android:text="4"
            android:textSize="40dp" />

        <Button
            android:id="@+id/fiveBtnID"
            android:onClick="clickMeNow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="5"
            android:textSize="40dp" />

        <Button
            android:id="@+id/sixBtnID"
            android:onClick="clickMeNow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="6"
            android:textSize="40dp" />

        <Button
            android:id="@+id/subBtnID"
            android:onClick="clickMeNow"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="-"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/oneBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickMeNow"
            android:text="1"
            android:textSize="40dp" />

        <Button
            android:id="@+id/twoBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickMeNow"
            android:text="2"
            android:textSize="40dp" />

        <Button
            android:id="@+id/threeBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickMeNow"
            android:text="3"
            android:textSize="40dp" />

        <Button
            android:id="@+id/sumBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickMeNow"
            android:text="+"
            android:textSize="40dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="4">

        <Button
            android:id="@+id/plusMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="clickMeNow"
            android:text="+/-"
            android:textSize="40dp" />

        <Button
            android:id="@+id/zeroBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:text="0"
            android:textSize="40dp" />

        <Button
            android:id="@+id/dotBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="clickMeNow"
            android:layout_weight="1"
            android:text="."
            android:textSize="40dp" />

        <Button
            android:id="@+id/calculateBtnID"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="="
            android:onClick="clickMeNow"
            android:textSize="40dp" />
    </LinearLayout>



</LinearLayout>